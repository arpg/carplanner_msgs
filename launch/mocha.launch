<launch>

  <!-- <arg name="input_mesh" default="/infinitam/mesh"/> -->
  <arg name="params_file" default="/home/mike/code/mochapc/learning_params.csv"/>
  <arg name="mode" default="0"/>
  <arg name="terrain_mesh_file" default="/home/mike/code/mochapc/labLoop.ply"/>
  <arg name="car_mesh_file" default="/home/mike/code/mochapc/herbie/herbie.blend"/>
  <arg name="wheel_mesh_file" default="/home/mike/code/mochapc/herbie/wheel.blend"/>

  <!-- <node pkg="nodelet" type="nodelet" name="mocha_manager"  args="manager" output="screen"/> -->
  <node pkg="nodelet" type="nodelet" name="mocha_vehicle" args="load mochapc/MochaVehicleNodelet mocha_manager" output="screen">
    <!-- <remap from="input_mesh" to="$(arg input_mesh)"/> -->
    <param name="params_file" value="$(arg params_file)"/>
    <param name="mode" value="$(arg mode)"/>
    <param name="terrain_mesh_file" value="$(arg terrain_mesh_file)"/>
    <param name="car_mesh_file" value="$(arg car_mesh_file)"/>
    <param name="wheel_mesh_file" value="$(arg wheel_mesh_file)"/>
  </node>
  <node pkg="nodelet" type="nodelet" name="mocha_planner" args="load mochapc/MochaPlannerNodelet mocha_manager" output="screen" launch-prefix="bash -c 'sleep 1.0; $0 $@' ">
    <!-- <remap from="input_mesh" to="$(arg input_mesh)"/> -->
    <param name="params_file" value="$(arg params_file)"/>
    <param name="terrain_mesh_file" value="$(arg terrain_mesh_file)"/>
  </node>

</launch>
