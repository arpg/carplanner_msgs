<launch>

  <arg name="launch_rviz"       default="true"/>

  <arg name="vehicle_name"       default="N01"/>

  <node pkg="tf2_ros" type="static_transform_publisher" name="tf_world2mocap" args="0 0 0 1.5 0 1.5 world mocap"/>

  <include file="$(find vrpn_client_ros)/launch/sample.launch">
    <arg name="server"    value="tracker"/>
    <arg name="frame_id"  value="mocap"/>
  </include>

  <node pkg="tf2_ros" type="static_transform_publisher" name="tf_vehicle2base_link" args="0 0 0 -1.5 -1.5 0 $(arg vehicle_name) $(arg vehicle_name)/base_link"/>

  <node pkg="rviz" type="rviz" name="mocha_rviz" args="-d $(find mochapc)/rviz/carplanner.rviz" if="$(arg launch_rviz)"/>

  <!-- <node pkg="carplanner_msgs" type="pose2odom" name="pose2odom" output="screen">
    <param name="pose_topic" value="/vrpn_client_node/$(arg vehicle_name)/pose"/>
    <param name="odom_topic" value="/vrpn_client_node/$(arg vehicle_name)/odom"/>
    <param name="twist_topic" value="/vrpn_client_node/$(arg vehicle_name)/twist"/>
    <param name="child_frame_id" value="$(arg vehicle_name)"/>
    <param name="avg_window_length" value="1.0"/>
  </node> -->

  <node pkg="carplanner_msgs" type="tf2odom" name="tf2odom" output="screen">
    <param name="parent_frame" value="world"/>
    <param name="child_frame" value="$(arg vehicle_name)/base_link"/>
    <param name="odom_topic" value="$(arg vehicle_name)/odom"/>
    <param name="rate" value="100"/>
    <param name="vel_avg_len" value="0.1"/>
  </node>

  <node pkg="carplanner_msgs" type="odom_reframer" name="odom_reframer" output="screen">
    <param name="odom_in_topic" value="$(arg vehicle_name)/odom"/>
    <param name="odom_out_topic" value="$(arg vehicle_name)/odom_chassis"/>
  </node>

</launch>
