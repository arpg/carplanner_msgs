<launch>

  <arg name="manager"     default="mocha_planner"/>
  <arg name="enable_debug" default="false"/>
  <arg name="launch_prefix" default="gdb -ex run --args" if="$(arg enable_debug)"/>
  <arg name="launch_delay" default="0"/>
  <arg name="launch_prefix" default="bash -c 'sleep $(arg launch_delay); $0 $@' " unless="$(arg enable_debug)"/>
  <!-- <arg name="input_mesh" default="/infinitam/mesh"/> -->
  <arg name="map_frame" default="map"/>
  <arg name="base_link_frame" default="base_link"/>
  <arg name="params_file" default="/home/ubuntu/mikem_local_planning_ws/src/mochapc/learning_params.csv"/>
  <arg name="terrain_mesh_file" default="/home/ubuntu/mikem_local_planning_ws/src/mochapc/labLoop.ply"/>

  <!-- <node pkg="nodelet" type="nodelet" name="mocha_manager"  args="manager"/> -->
  <node pkg="nodelet" type="nodelet" name="mocha_planner" args="load mochapc/MochaPlannerNodelet $(arg manager)" output="screen" respawn="true"  launch-prefix="$(arg launch_prefix)">
    <!-- <remap from="input_mesh" to="$(arg input_mesh)"/> -->
    <param name="map_frame" value="$(arg map_frame)"/>
    <param name="base_link_frame" value="$(arg base_link_frame)"/>
    <param name="params_file" value="$(arg params_file)"/>
    <param name="terrain_mesh_file" value="$(arg terrain_mesh_file)"/>
  </node>

</launch>
